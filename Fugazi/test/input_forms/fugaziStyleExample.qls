stylesheet taxOfficeExample 
  page Housing {
    section "Info"
      question name
    section "Buying"
      question hasBoughtHouse
      default bool {
        font: "Georgia"
        fontsize: 24
        color: #E60C0C
        widget radio("Yes", "No")
      }
    section "Loaning"  
      question hasMaintLoan
        widget checkbox
  }

  page Selling { 
    section "Selling" {
      question hasSoldHouse
      default bool {
        font: "Georgia"
        fontsize: 6
        color: #382192
        widget dropdown("Yes", "No")
      }
    }
      section "You sold a house" {
        question sellingPrice
          widget slider
        question privateDebt
          widget slider
        question valueResidue
        default int {
          width: 400
          font: "Georgia"
          fontsize: 14
          color: #E60C0C
          widget spinbox
        }        
      }
    }
    default bool widget radio("Yes", "No")
  }
  